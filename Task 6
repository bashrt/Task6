
// Assignment 1
let checkNumber = function(number){
    if(number>0){
        console.log('Positive')
    }
    else if(number<0){
        console.log('Negative')
    }
    else{
        console.log('Zero')
    }
}
checkNumber(20)
checkNumber(-20)
checkNumber(0)

// Assignment 2

let factorial = function(number){
    let result = 1;
    for(let i = 1; i <= number;i++){
        result *= i;
    }
    return result;
}
console.log(factorial(2))

